<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5687e0">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp" />

    <EditText
        android:id="@+id/idText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:hint="아이디"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="121dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:hint="비밀번호"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/idText"
        android:layout_alignLeft="@+id/idText"
        android:layout_alignStart="@+id/idText" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="로그인"
        android:textColor="@android:color/white"
        android:layout_marginTop="17dp"
        android:background="@drawable/loginbutton1"
        android:layout_below="@+id/passwordText"
        android:layout_alignLeft="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText" />

    <TextView
        android:id="@+id/registerButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="처음이신가요?"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/loginButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

</RelativeLayout>